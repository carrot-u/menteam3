<p id="notice"><%= notice %></p>

<h1 class= "text-center header">Mentor Topics</h1>
<br>


<div class="cmtcard col-sm-4 i-am-centered">
  <div class="card bg-secondary">
    <div class="card-body text-center">

    <%= form_tag(topics_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Search', topic: nil, class: "topsubmit" %>
    <% end %>
    <br>


    <table class="table table-hover">
      <thead>
        <tr>
          <th style="color:white; size:25px;">Name</th>
          <th colspan="3" style="color:white; size:25px;">Choose Language</th>
        </tr>
      </thead>

      <tbody>
        <% @topics.each do |topic| %>
          <tr>
            <td th style="color:white";><%= topic.topic %></td>
            <td th style="color:white";><%= link_to 'Show', topic, class: "topiclink" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

<br>
