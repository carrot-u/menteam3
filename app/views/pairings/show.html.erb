<br>

<h1 class= "text-center header">Mentorship Requests</h1>
<br>
<br>
<h2 class="title2"> Inbound Requests </h2>
<br>

<% if @pending_mentor_request.any?%>
  Pending mentor requests<br>
  <% @pending_mentor_request.each do |pairing| %>
    <% mentee = User.find(pairing.mentee_id) %>
    <span>
      <%= mentee.first_name %>
      <%= button_to 'Accept', edit_pairing_path, method: :get, params: {pairing_id: pairing.id, status: 'active'} %>
      <%= button_to 'Decline', edit_pairing_path, method: :get, params: {pairing_id: pairing.id, status: 'decline'} %>
    </span>
  <% end %>
<% else %>
  <h4 style= "font-weight: bold;"> You currently have no pending mentor requests.</h4>
<% end %>

<br>
<br>
<br>
<br>

<h2 class="title2"> Outbound Requests </h2>
<br>

<% if @pending_mentee_request.any?%>
  <h5>Request Sent:</h5>
  <% @pending_mentee_request.each do |pairing| %>
    <% mentor = User.find(pairing.mentor_id) %>
    <span>
      <%= mentor.first_name %>
      <%= button_to 'Cancel', edit_pairing_path, method: :get, params: {pairing_id: pairing.id, status: 'cancel'} %>
    </span>
  <% end %>
<% else %>
 <h4 style= "font-weight: bold;">You currently have not sent any requests.</h4>
<% end %>
<br>
<br>
<div>
<h4>
  <%= link_to 'Go Back To Profile', user_path(params[:id]), :class => "btn font-weight-bold border-secondary btnpairing"%>
</h4>
</div>
