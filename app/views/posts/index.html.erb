<h1> All your Questions </h1>
<p>
<%# <%= link_to "Create a new Question", new_post_path %> 
</p>

<table>
    <tr>
        <th>Subject</th>
        <th>Body</th>
        <th>Author</th>
    </tr>
    <% @post.each do |post| %>
    <tr>
        <td> <%= post.subject %> </td> 
        <td <%= post.body %> </td>
        <% user = User.find(post.user_id)%> 
        <td> <%= user.first_name %> </td>
        <td> <%=link_to 'Edit', edit_post_path(post.id, pairing_id: post.pairing_id) %> </td>
        <td> <%=link_to 'Show', post_path(post.id) %> </td>
        <td> <%=link_to 'Remove', post_path(post.id), method: :delete, data: {confirm: "Are you sure you want to delet your question?"} %> </td>
    </tr>
    <% end %>

</table>

