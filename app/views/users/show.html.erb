<div class="card cardprof card-1 col-md-6 text-md-center" id="card1">
<div class="card bg-secondary">
      <table class="table table-hover">
        <tbody>
          <tr>
            <td><span class="bold" style="color:white">First Name:</span></td>
            <td style="color:white">
              <%= @user.first_name%>
            </td>
          </tr>
          <tr>
            <td><span class="bold" style="color:white">Last Name:</span></td>
            <td style="color:white">
              <%= @user.last_name%>
            </td>
          </tr>
          <tr>
            <td><span class="bold" style="color:white">Email:</span></td>
            <td colspan="2" style="color:white">
              <%= @user.last_name %>
            </td>
          </tr>
          <tr>
            <td><span class="bold" style="color:white">Position:</span></td>
            <td colspan="2" style="color:white">
              <%= @user.position %>
            </td>
          </tr>
          <tr>
            <td><span class="bold" style="color:white">Bio:</span></td>
            <td colspan="2" style="color:white">
              <%= @user.bio %>
            </td>
          </tr>
          <tr>
            <td><span class="bold" style="color:white">Need changes?</span></td>
            <td colspan="2" style="color:white">
              <%= link_to 'Click here to Edit Profile', edit_user_path, class: "profedit" %>	 
          </td>
        </tbody>
      </table>
    </div>
  </div>
