<div class="row">
  <div class="col-sm-6">
    <div class="card cardprof bg-secondary">
      <div class="card-body">
        <%= render partial: 'user_tags/form'%>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card cardprof bg-secondary">
      <div class="card-body">
        <h3 class="title text-center"> Currently Mentoring:</h3>
        <% @user_tags_list.each do |user_selection| %>
        <li class="topicname", style="list-style-type: none; font-weight: bold;"><%= topic_name = Topic.find(user_selection.topic_id).topic %></li>
        <% end %>
      </div>
      <div class="card requestcard text-md-center">
      <h2>
          <% request = "Mentorship Requests" %>
            <% request += "(#{@pending_mentor_request.length})" if @pending_mentor_request.any? %>
