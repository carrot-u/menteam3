<!DOCTYPE html>
<html>

<head>
</head>

<body>

<h1 class= "text-center welcome" >Your Profile</h1>



 <!--CARDS start here-->
<div class="card cardprof card-1 col-md-6 text-md-center" id="card1">
  <table class="table table-hover">
    <tbody>
      <tr>
        <td><span class="bold">First Name:</span></td>
        <td>
        	<%= @user.first_name%>
        </td>
      </tr>
      <tr>
        <td><span class="bold">Last Name:</span></td>
        <td>
          <%= @user.last_name%>
        </td>
      </tr>
      <tr>
        <td><span class="bold">Email:</span></td>
        <td colspan="2">
          <%= @user.last_name %>
        </td>
      </tr>
       <tr>
        <td><span class="bold">Position:</span></td>
        <td colspan="2">
          <%= @user.position %>
        </td>
      </tr>
       <tr>
        <td><span class="bold">Bio:</span></td>
        <td colspan="2">
          <%= @user.bio %>
        </td>
      </tr>
    </tbody>
  </table>
</div>


<br>
<br>
<br>



<div class="row">
  <div class="col-sm-6">
    <div class="card cardprof bg-success">
      <div class="card-body">
        <%= render partial: 'user_tags/form'%>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card cardprof bg-success">
      <div class="card-body">
        <h2 class="title text-center"> Mentorship Requests:</h2>
        <% @user_tags_list.each do |user_selection| %>
        <li><%= topic_name = Topic.find(user_selection.topic_id).topic %></li>
        <% end %>
        <h3>
        <% request = 'Requests' %>
        </h3>
        <% request += "(#{@pending_mentor_request.length})" if @pending_mentor_request.any? %>
        <%= link_to request, pairing_path(session[:user_id]) %>
      </div>
     </div>
    </div>
  </div>
</div> 
<br>
<br>



</body>
</html>
